{
  "compilerOptions": {
    "lib": [
      "es2015",
      "dom"
    ],
    "target": "es5",
    "baseUrl": ".",
    "jsx": "react",
    "allowJs": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "isolatedModules": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ]
}